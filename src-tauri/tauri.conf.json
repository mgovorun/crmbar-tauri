{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "crmbar-tauri",
    "version": "0.0.26"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
        "notification": {
            "all": true
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "identifier": "ru.fsfera.crm",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "security": {
      "csp": null
    },
      "windows": [
          {
              "fullscreen": false,
              "height": 600,
              "resizable": false,
              "title": "crmbar-tauri",
              "width": 800,
              "visible": false
          }
      ],
      "systemTray": {
          "iconPath": "icons/crmbarTrayIcon.png",
          "iconAsTemplate": true
      },
      "updater": {
          "active": true,
          "endpoints": [
              "https://gist.githubusercontent.com/mgovorun/49f4e25784383e9d380b68cf2eaa9f94/raw/latest.json"
          ],
          "dialog": true,
          "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFODFDRDc2NUNEMUE1RDYKUldUV3BkRmNkczJCenJBV1lXcExOTlF4d0t1UFc5MUloZ0YyMjh6WG9KR3NaMm5Cb0JiUkpsNncK"
      }
  }
}
