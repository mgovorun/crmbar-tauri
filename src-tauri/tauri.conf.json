{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "crmbar-tauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
        "notification": {
            "all": true
        }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ru.fsfera.crm",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
      "systemTray": {
          "iconPath": "icons/crmbarTrayIcon.png",
          "iconAsTemplate": true
      }
  }
}
