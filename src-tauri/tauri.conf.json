{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "crmbar-tauri",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
        "notification": {
            "all": true
        }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ru.fsfera.crm",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
      "windows": [
          {
              "fullscreen": false,
              "height": 600,
              "resizable": false,
              "title": "crmbar-tauri",
              "width": 800,
              "visible": false
          }
      ],
      "systemTray": {
          "iconPath": "icons/crmbarTrayIcon.png",
          "iconAsTemplate": true
      },
      "updater": {
          "active": true,
          "endpoints": [
              "https://api.github.com/repos/mgovorun/crmbar-tauri/releases/latest"
          ],
          "dialog": true,
          "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJGRkU2NzkwNzdDQzE0N0YKUldSL0ZNeDNrR2YrdjVTVmYxend1d3U5UmYvVXpHR3Rma3pMRGNZZjh3U25TRUlCQ3lWcXpLUFMK"
      }
  }
}
